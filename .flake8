[flake8]
max-line-length = 120
exclude = 
  .git,
  __pycache__,
  README.md,
  poetry.lock,
  Dockerfile,
  .pre-commit-config.yaml,
  .flake8,
  .gitignore,
  requirements.txt,
  .dockerignore,
  pytest.ini,
  pyproject.toml,
  poetry.toml,
  .vscode/*,
  CHANGELOG.md,
  .gitlab-ci.yml,
  requirements-dev.txt,
  doc/*,
  .coveragerc,
  venv/*,
  .venv/*,
  example_data/*,
  setup.py,
  .devcontainer/*,
  tests/*.json,
  tests/*.csv,
  tests/*.txt
max-complexity = 15
include=src/*.py,tests/*.py